@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body style="background-color:#e9e7e7;">
<div class="text-center">
    <H1> Welcome to <span style="color:#d72222">JOE'S</span> <span style="color:#35bfbf;">PIZZA!</span></H1>
    <br />
    <h3>The Best Pizza's are served here since year 1995.</h3>
</div>

<br />

<div class="container d-flex flex-wrap">

    @foreach (var product in Model.Products)
    {
        <div class="card mx-auto" style="width: 19rem; border:2px solid; box-shadow: 10px 10px 5px -1px rgba(171,171,171,1); margin-bottom:15px;" >
            <img class="card-img-top" src="~/images/@product.Photo" alt="Card image">
           
                <div class="card-body">
                    <h4 class="card-title">@product.Name</h4>
                    <p class="card-text">Pizza Type: 
                    @if (product.Type == "Veg")
                    {
                        <b style="color:green;">@product.Type </b>
                    }
                    @if (product.Type == "Non Veg")
                    {
                        <b style="color:Red;">@product.Type </b>
                    }
                    <br />Price : <b>Rs @product.Price</b></p>
                    <a class="btn btn-success" asp-page="cart" asp-page-handler="buynow" asp-route-id="@product.Id">Buy Now</a>

                </div>
        </div>
      
    }
</div>

</body>